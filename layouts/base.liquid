<html lang="nl-NL">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="./css/global.css">
        <link rel="stylesheet" href= {{ weatherCSS }}>
        <link rel="icon" type="image/x-icon" href="">

        <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
        <script type="text/javascript" src="./js/google-translate.js"></script>
        <script type="text/javascript" src="./js/image-slider.js"></script>
        <script type="text/javascript" src="./js/header.js"></script>
        
        <script type="text/javascript" src={{ weatherScript }}></script>
        <style>
            :root {
                --amount: {{ amount }}
            }
        </style>

        <title> {{ siteTitle }} </title>
        {% block head %}{% endblock %}
    </head>

    <body class="scroll scroll-vertical">
        {% include "partials/header.liquid" %}
        <main>
        {% block content %}{% endblock %}
        </main>
        {% include  "partials/footer.liquid" %}

        {% comment %} <img class="transition-image normal-fade-in normal" src="./images/zomer-blad.svg">
        <img class="transition-image mirrored-fade-in mirrored" src="./images/zomer-blad.svg"> {% endcomment %}

        <img class="transition-image fade-in single" src="./images/leaf.svg">

        <script type="text/javascript" src="./js/seasons.js"></script>
        <script>
            window.sunStatus = "{{ is_sun_up }}";
        </script>
        <script type="text/javascript" src="./js/sun-moon-hover.js">
        </script>
        <script type="text/javascript" src="./js/page-transition.js"></script>
    </body>
</html> 