<html lang="nl-NL">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/css/global.css">
        <link rel="stylesheet" href= {{ weatherCSS }}>
        <link rel="icon" type="image/x-icon" href="">
        <title> Bieb in Bloei 
            {% if pageTitle %}
            | {{ pageTitle }} 
            {% endif %}
        </title>
        {% block head %}{% endblock %}
    </head>

    <body class="scroll scroll-vertical">
        {% include "partials/header.liquid" %}
        <main>

        {% block content %}{% endblock %}
        </main>
        <div class="accessibilityMenu">
            <div class="accessibilityContent">
                <ul>
                    <li>
                        <label>
                            <input type="checkbox" id="toggle-darkmode">
                            Dark Mode
                        </label>
                    </li>
                    {% comment %} not used anymore {% endcomment %}
                    {% comment %} <li>                        
                        <label>
                            <input type="checkbox" id="reducedMotion" onclick = "reducedMotion()">
                            Reduced Motion
                        </label>
                    </li> {% endcomment %}
                    <li>                        
                        <label>
                            <input type="checkbox" id="font-size">
                            Groter Font
                        </label>
                    </li>
                    <li id="google_translate_element">Vertaal de site
                        
                    </li>
                </ul>
            </div>

            <label class="accessibilityIcon">
                <input type="checkbox" id="menu">
                <img src="./images/accessibility.png">
            </label>
        </div>
        {% comment %} <div class="transition-container"> {% endcomment %}
            <img class="transition-image fade-in" src="./images/herfst-blad-2.svg">
        {% comment %} </div> {% endcomment %}
        

        {% include  "partials/footer.liquid" %}
        {% include  "components/scripts.liquid" %}
    </body>
</html> 